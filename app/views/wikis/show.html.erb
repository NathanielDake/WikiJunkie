<h1><%= @wiki.title %></h1>
<div class="row">
  <div class="col-md-8">
    <p><%= @wiki.body %></p>
  </div>
  <div class="col-md-4">
    <% if user_is_authorized_to_update_wikis?(@wiki) %>
      <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success'%>
      <%= link_to "Delete", @wiki, method: :delete, class: 'btn btn-danger'%>
    <% end %>
  </div>
</div>
